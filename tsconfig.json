{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": false,
        "noEmitOnError": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "experimentalDecorators": true,
        "types": [ "whatwg-fetch" ],
        "typingOptions": {
            "exclude": [
                "node_modules"
            ]
        },
        "typeRoots": [
          "node_modules/@types/"
        ]
    },
    "include": [
        "./src/**/*",
        "node_modules/@types/**/*.ts"
    ]
}


